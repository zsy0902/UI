<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#523F51B5">

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/text_view1"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:gravity="center"
        android:text="注册"
        android:textSize="39dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="right"
            android:src="@drawable/img_11" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:hint="请输入手机号"
            android:digits="0123456789"
            android:maxLength="11"
            android:lines="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:src="@drawable/img_10" />

        <EditText
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:hint="请输入设置的密码（8位以上数字）"
            android:digits="0123456789"
            android:lines="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:src="@drawable/view" />
    </LinearLayout>

    <EditText
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="28dp"
        android:digits="0123456789"
        android:hint="请确认密码"
        android:lines="1"
        android:rotationX="2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="51dp"
            android:digits="0123456789"
            android:hint="请输入验证码"
            android:inputType="text"
            android:lines="1" />
        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#22EDECEC"
            android:text="获取验证码" />

    </LinearLayout>

    <Button
        android:id="@+id/button_2"
        android:layout_width="129dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="注册"
        android:backgroundTint="#516173D5"/>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="230dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="勾选用户同意协定" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168dp">

        <ImageView
            android:layout_width="187dp"
            android:layout_height="145dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:src="@drawable/img_12" />

        <TextView
            android:id="@+id/text_view2"
            android:layout_width="268dp"
            android:layout_height="149dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:rotationX="26"
            android:text="欢迎加入学姐(手摸手)教学俱乐部！！！"
            android:textSize="26dp" />
    </LinearLayout>



</LinearLayout>